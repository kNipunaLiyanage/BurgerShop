                            <div class="fig_container">
                                <h3>SUNDAY</h3>
                                <p>We Open</p>
                            </div>
                        </figcaption>
                    </figure>
                </div>
                <!-- End Menu Item -->
                <!-- Menu Item -->
                <div class="menu-item col-md-4 col-sm-4 col-xs-12">
                    <figure>
                        <img class="img-responsive" src="~/img/themes/burger/diet.jpg" alt="" />
                        <figcaption class="text-center">
                            <div class="fig_container">
                                <h3>DIET FOODS</h3>
                                <p>We Offer Diet Food</p>
                            </div>
