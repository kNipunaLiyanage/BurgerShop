    <!--  END SIDEBAR  -->
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-top-spacing">






                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                    <div class="widget widget-table-two">

                        <div class="widget-heading">
                            <h5 class="">Items </h5>
                        </div>

                        <div class="widget-content">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th><div class="th-content">Item Name</div></th>
                                            <th><div class="th-content">Meal Type</div></th>
                                            <th><div class="th-content">Suitable for</div></th>
                                            <th><div class="th-content">Size</div></th>
                                            <th><div class="th-content">Unitprice</div></th>
                                            <th><div class="th-content">Status</div></th>
                                            <th><div class="th-content">Action</div></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in Model)
                                        {
                                            <tr>
                                                <td><div class="td-content customer-name" id="@string.Concat(doc.Itemid,"itenname")"><span>@doc.Itemname</span></div></td>
                                                <td><div class="td-content product-brand text-primary">@doc.Mealtype</div></td>
                                                <td><div class="td-content product-brand text-primary">@doc.Mealsuitblefor</div></td>
                                                <td><div class="td-content product-brand text-primary">@doc.Sizez</div></td>
                                                <td><div class="td-content product-brand text-primary">@doc.Unitprice</div></td>
                                                <td><div class="td-content"><span class="badge badge-success">@doc.Statusz</span></div></td>
                                                <td><button class="btn btn-danger" onclick="RemovItem(@doc.Itemid)">Remove Item</button></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>






            </div>

        </div>
        <div class="footer-wrapper">
            <div class="footer-section f-section-1">
