
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/UserLoginLayout.cshtml";
}

<div id="content">
    <!-- Login Default
    ============================================= -->
    <section class="padding-100 text-center login">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
                    <i class="icon-intro"></i>
                    <h1>Login</h1>
                    <span class="welcome ">Login to continue</span>
                    <form>
                    </form>
                    <div class="form-group padding-50">
                        <form>
                            <input type="text" id="uname" class="form-control" placeholder="Email" style="text-transform:lowercase;">
                            <input type="password" id="pw" class="form-control" placeholder="Password">
                            <button type="button" id="loginbtn" onclick="gotologin()" class="btn form-control btn-black">Login</button>
                        </form>
                    </div>
                    <div class="forget text-center">
                        <form action="CreateAccount" method="get">
                        <p><button type="submit">Create an account <i class="fa fa-chevron-circle-right"></i></button></p>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login Default -->
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>

    function gotologin() {




        var uname = $('#uname').val();
        var pw = $('#pw').val();
        if (uname == "" || pw == "") {

            swal("Error!", "Please Fill all feilds...!", "error");
        } else {

            $.post("LogUSR",
                {
                    uname: uname,
                    pw: pw

                },
                function (data, status) {
                    
                    if (data == "ok") {
                        swal("Login Sucess ...!", {
                            icon: "success",
                        });
                        window.location = "LoadMenu";
                    } else {
                        swal("Error!", "Invalid Login Details", "error");
                    }

                });

        }


    }

</script>

